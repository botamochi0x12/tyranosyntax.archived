{
    "name": "tyranosyntax",
    "displayName": "TyranoScript syntax",
    "description": "Provides TyranoScript Adventure Game syntax for Visual Studio Code",
	"publisher": "orukred-tyranosyntax",
	"repository": {
		"type": "git", 
		"url": "https://github.com/orukRed/tyranosyntax"		
	},
    "version": "0.1.1",

    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
	"comment":"tyranoscriptのファイル開いた時extension.jsを起動",
	"main": "extension.js",
	"activationEvents": [
		"onLanguage:tyrano",
		"onCommand:tyrano.shiftEnter",
		"onCommand:tyrano.ctrlEnter",
		"onCommand:tyrano.altEnter"
	],
    "contributes": {		
        "languages": [{
            "id": "tyrano",
            "aliases": ["tyranoscript", "tyrano"],
            "extensions": [".ks"],
			
            "configuration": "./language-configuration.json"
     	   }],
        "grammars": [{
            "language": "tyrano",
            "scopeName": "source.ks",
            "path": "./syntaxes/tyrano.tmLanguage.json"
        }],
		"snippets": [{
			"language": "tyrano",
			"scopeName":"source.ks",
			"path": "./snippet/tyrano.snippet.json"
		},
		{
			"language": "javascript",
			"scopeName":"source.js",
			"path": "./snippet/javascript.snippet.json"		
		}],
		"commands":[
			{
				"command":"tyrano.shiftEnter",
				"title":"print [l][r]"
			},
			{
				"command":"tyrano.ctrlEnter",
				"title":"print [p]"
			},
			{
				"command":"tyrano.altEnter",
				"title":"print #"
			}
		],
		
		"keybindings":[
			{
				"command":"tyrano.shiftEnter",
				"key": "shift+enter",
				"when": "editorLangId == tyrano"
			},
			{
				"command":"tyrano.ctrlEnter",
				"key": "ctrl+enter",
				"mac": "cmd+r",
				"when": "editorLangId == tyrano"
			},
			{
				"command":"tyrano.altEnter",
				"key": "alt+enter",
				"mac": "option+enter",
				"when": "editorLangId == tyrano"
				
			}
			
		]
		
    }
	
}
