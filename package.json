{
	"name": "tyranosyntax",
	"displayName": "TyranoScript syntax",
	"description": "Provides TyranoScript Adventure Game syntax for Visual Studio Code",
	"publisher": "orukred-tyranosyntax",
	"repository": {
		"type": "git",
		"url": "https://github.com/orukRed/tyranosyntax"
	},
	"version": "0.1.6",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Programming Languages"
	],
	"comment": "tyranoscriptのファイル開いた時extension.tsを起動",
	"main": "./out/extension.js",
	"activationEvents": [
		"onLanguage:tyrano",
		"onCommand:tyrano.shiftEnter",
		"onCommand:tyrano.ctrlEnter",
		"onCommand:tyrano.altEnter"
	],
	"contributes": {
		"languages": [
			{
				"id": "tyrano",
				"aliases": [
					"tyranoscript",
					"tyrano"
				],
				"extensions": [
					".ks"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "tyrano",
				"scopeName": "source.ks",
				"path": "./syntaxes/tyrano.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "tyrano",
				"scopeName": "source.ks",
				"path": "./snippet/tyrano.snippet.json"
			},
			{
				"language": "javascript",
				"scopeName": "source.js",
				"path": "./snippet/javascript.snippet.json"
			}
		],
		"commands": [
			{
				"command": "tyrano.shiftEnter",
				"title": "print [l][r]"
			},
			{
				"command": "tyrano.ctrlEnter",
				"title": "print [p]"
			},
			{
				"command": "tyrano.altEnter",
				"title": "print #"
			}
		],
		"keybindings": [
			{
				"command": "tyrano.shiftEnter",

				"key": "shift+enter",
				"win": "shift+enter",
				"mac": "shift+enter",
				"when": "editorLangId == tyrano"
			},
			{
				"command": "tyrano.ctrlEnter",
				"key": "ctrl+enter",
				"win": "ctrl+enter",
				"mac": "cmd+enter",
				"when": "editorLangId == tyrano"
			},
			{
				"command": "tyrano.altEnter",
				"win": "alt+enter",
				"mac": "option+enter",
				"when": "editorLangId == tyrano"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^15.12.5",
		"@types/vscode": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"fs": "0.0.1-security"
	}
}
